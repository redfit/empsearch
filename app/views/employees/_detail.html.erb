<div id="profile" class="row">
  <div class="span9">
    <a href="#" class="close" data-dismiss="modal">x</a>
    <%= image_tag employee.pic_name, :class => 'avatar' %>
    <h1><%= employee.user_name %></h1>
  </div>
</div>
<div class="row">
  <div class="span9">
    <dl class="well dl-horizontal">
      <dt>メールアドレス：</dt>
      <dd><%= employee.email.present? ? employee.email : "&nbsp;".html_safe %></dd>
      <dt>所属部署：</dt>
      <dd><%= employee.unit.present? ? employee.unit : "&nbsp;".html_safe %></dd>
      <dt>役職：</dt>
      <dd><%= employee.role.present? ? employee.role : "&nbsp;".html_safe %></dd>
      <dt>内線：</dt>
      <dd><%= employee.tel1.present? ? employee.tel1 : "&nbsp;".html_safe %></dd>
      <dt>外線：</dt>
      <dd><%= employee.tel2.present? ? employee.tel2 : "&nbsp;".html_safe %></dd>
      <dt>その他連絡先：</dt>
      <dd><%= employee.tel3.present? ? employee.tel3 : "&nbsp;".html_safe %></dd>
      <dt>勤務地：</dt>
      <dd><%= employee.place.present? ? employee.place : "&nbsp;".html_safe  %></dd>
      <dt>自己紹介：</dt>
      <dd><%= employee.introduction.present? ? simple_format(employee.introduction) : "&nbsp;".html_safe %></dd>
      <dt>目標：</dt>
      <dd><%= employee.target.present? ? simple_format(employee.target) : "&nbsp;".html_safe %></dd>
    </dl>
  </div>
</div>
