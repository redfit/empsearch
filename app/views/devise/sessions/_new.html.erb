<div>
  <%= render partial: 'shared/alert', :locals => {:alert => alert, :notice => notice} %>
</div>

<%= form_for(resource, :as => resource_name, :remote => true,  :url => user_session_path) do |f| %>
  <div>
    <%= f.label :email, "Email or Usagi ID" %>
    <%= f.email_field :email, :class => "span5" %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, :class => "span5" %>
  </div>

  <div>
    <%= f.label :remember_me, :class => "checkbox" do %>
      <%= f.check_box :remember_me %> Remember Me
    <% end %>
  </div>
  <br />
  <div><%= f.submit "ログイン", :class => "btn btn-primary" %></div>
<% end %>

